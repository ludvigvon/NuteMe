<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="ca.umontreal.ift2905.nuteme.DetailedViews">

<android.support.design.widget.TabLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/detailedViews_tablayout"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:fillViewport="false" />

<android.support.v4.view.ViewPager
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/pager_detailedViews"
    android:layout_below="@+id/detailedViews_tablayout"
    android:layout_centerHorizontal="true"
    android:layout_above="@+id/detailedViews_button_newSearch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Search"
        android:id="@+id/detailedViews_button_newSearch"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/pager_detailedViews"
        android:layout_alignEnd="@+id/pager_detailedViews" />
</RelativeLayout>
